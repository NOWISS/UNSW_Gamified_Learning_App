<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDDE"
    tools:context=".LearnActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Choose a topic"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_topic_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <android.widget.Button
        android:id="@+id/btnLearn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:background="@drawable/highlighted_button"
        android:drawableTop="@drawable/ic_baseline_menu_book_24"
        android:insetBottom="-2dp"
        android:text="Learn"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/btnNotes"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_notes_24"
        android:insetBottom="-2dp"
        android:text="Notes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLearn" />

    <android.widget.Button
        android:id="@+id/btnQuizzes"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_edit_note_24"
        android:insetBottom="-2dp"
        android:text="Quizzes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNotes" />

    <android.widget.Button
        android:id="@+id/btnProfile"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_person_24"
        android:insetBottom="-2dp"
        android:text="Profile"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnQuizzes" />

</LinearLayout>