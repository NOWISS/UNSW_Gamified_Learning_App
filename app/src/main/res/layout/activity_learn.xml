<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnActivity">

    <android.widget.Button
        android:id="@+id/btnLearn1"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_menu_book_24"
        android:insetBottom="-2dp"
        android:text="Learn"
        android:textSize="12sp"
        android:background="@drawable/highlighted_button"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/btnNotes1"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_notes_24"
        android:insetBottom="-2dp"
        android:text="Notes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLearn1" />

    <android.widget.Button
        android:id="@+id/btnQuizzes1"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_edit_note_24"
        android:insetBottom="-2dp"
        android:text="Quizzes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNotes1" />

    <android.widget.Button
        android:id="@+id/btnProfile1"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_person_24"
        android:insetBottom="-2dp"
        android:text="Profile"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnQuizzes1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_48_black" />

</androidx.constraintlayout.widget.ConstraintLayout>