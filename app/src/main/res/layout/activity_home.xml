<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDDE"
    tools:context=".HomeActivity">


    <View
        android:id="@+id/view"
        android:layout_width="452dp"
        android:layout_height="404dp"
        android:layout_marginBottom="556dp"
        android:background="@drawable/login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Climate Change Tips"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />

    <ImageView
        android:id="@+id/tipimg"
        android:layout_width="229dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="287dp"
        android:layout_height="148dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:progressTint="#44B7E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip"
        app:layout_constraintVertical_bias="0.0" />

    <android.widget.Button
        android:id="@+id/btnLearn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_menu_book_24"
        android:insetBottom="-2dp"
        android:text="Learn"
        android:textSize="12sp"
        android:background="@drawable/navigation_buttons"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/btnNotes"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_notes_24"
        android:insetBottom="-2dp"
        android:text="Notes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLearn" />

    <android.widget.Button
        android:id="@+id/btnQuizzes"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_edit_note_24"
        android:insetBottom="-2dp"
        android:text="Quizzes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNotes" />

    <android.widget.Button
        android:id="@+id/btnProfile"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_person_24"
        android:insetBottom="-2dp"
        android:text="Profile"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnQuizzes" />
</androidx.constraintlayout.widget.ConstraintLayout>