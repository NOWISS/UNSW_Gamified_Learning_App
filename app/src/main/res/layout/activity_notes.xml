<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDDE"
    tools:context=".NotesActivity">

    <android.widget.Button
        android:id="@+id/btnLearn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_menu_book_24"
        android:insetBottom="-2dp"
        android:text="Learn"
        android:textSize="12sp"
        android:background="@drawable/navigation_buttons"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/btnNotes"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_notes_24"
        android:insetBottom="-2dp"
        android:text="Notes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/highlighted_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLearn" />

    <android.widget.Button
        android:id="@+id/btnQuizzes"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_edit_note_24"
        android:insetBottom="-2dp"
        android:text="Quizzes"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNotes" />

    <android.widget.Button
        android:id="@+id/btnProfile"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_person_24"
        android:insetBottom="-2dp"
        android:text="Profile"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/navigation_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnQuizzes" />

</androidx.constraintlayout.widget.ConstraintLayout>